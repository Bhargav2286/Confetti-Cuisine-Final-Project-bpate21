
    <class="container-fluid center-block" style="margin: 20px">
        <div class="data-form">
    <form class="form-signin" action="<%=`/vacations/${vacations._id}/update?_method=PUT`%>" method="POST">
        <h2 class="form-signin-heading">edit Culinary Vacation Package:</h2>

        <label for="inputTitle">Title</label>
        <input type="text" name="title" id="inputTitle" class="form-control" value="<%= vacations.title %>" minlength="3" autofocus required placeholder="Unique title for vacation" />

        <label for="inputDescription">Description</label>
        <input type="text" name="description" id="inputDescription" class="form-control" value="<%= vacations.description %>"  placeholder="Description of package" required />

        <label for="inputCuisine">Cuisine type</label>
        <select name="cuisine" id="inputCuisine" required class="form-control" value="<%= vacations.cuisine %>">
            <option value="" disabled selected>--Please choose an option--</option>
            <option value="Continental">Continental</option>
            <option value="Traditional">Traditional</option>
            <option value="Haute-cuisine">Haute-cuisine</option>
            <option value="Nouvelle-cuisine">Nouvelle-cuisine</option>
            <option value="Fusion">Fusion</option>
            <option value="Vegan">Vegan</option>
            <option value="Vegetarian">Vegetarian</option>
            <option value="Asian">Asian</option>
            <option value="Indian">Indian</option>
            <option value="Middle-Eastern">Middle-Eastern</option>
            <option value="African">African</option>
            <option value="Central American">Central American</option>
            <option value="South American">South American</option>
        </select>

        <label for="inputHeroImage">Vacation 'hero image' filename</label>
        <input type="text" name="heroImage" id="HeroImage" class="form-control" value="<%= vacations.heroImage %>" placeholder="Filename for vacation package hero image, e.g., Thai.jpg" />

        <label for="inputMaxTravelers">Max Travelers</label>
        <input type="number" name="maxTravelers" id="inputMaxTravelers" class="form-control" value="<%= vacations.maxTravelers %>" placeholder="Maximum # of travelers" min="0" max="25" required />

        <label for="inputCost">Cost ($)</label>
        <input type="number" name="cost" id="inputCost" class="form-control" value="<%= vacations.cost %>" placeholder="Cost per person" min="0" required />

        <label for="inputDestination">Destination</label>
        <input type="text" name="destination" id="inputDestination" class="form-control" value="<%= vacations.destination %>" placeholder="Vacation package destination: City, Country" required />

        <label for="inputDepatureLocation">Departure Location</label>
        <select name="departureLocation" id="inputDepartureLocation" class="form-control" value="<%= vacations.departureLocation %>" required >
            <option value="" disabled selected>--Please choose an option--</option>
            <option value="New York (JFK)">New York (JFK)</option>
            <option value="Boston (BOS)">Boston (BOS)</option>
            <option value="Chicago (ORD)">Chicago (ORD)</option>
            <option value="Miami (MIA)">Miami (MIA)</option>
            <option value="St. Louis (STL)">St. Louis (STL)</option>
            <option value="Dallas (DFW)">Dallas (DFW)</option>
            <option value="Seattle (SEA)">Seattle (SEA)</option>
            <option value="San Francisco (SFO)">San Francisco (SFO)</option>
        </select>

        <label for="inputDepartureDate">Departure Date</label>
        <input type="date" name="departureDate" id="inputDepartureDate"  class="form-control" value="<%= vacations.departureDate %>" placeholder="Date leaving" required />

        <label for="inputReturnDate">Return Date</label>
        <input type="date" name="returnDate" id="inputReturnDate"  class="form-control" value="<%= vacations.returnDate %>" placeholder="Date returning" required onblur="compare()"; />

        <br /><button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
    </form>
</div>

<script>
    function compare()
    {
        var startDt = document.getElementById("inputDepartureDate").value;
        var endDt = document.getElementById("inputReturnDate").value;
  
        if( (new Date(startDt).getTime() > new Date(endDt).getTime()))
        {
          document.getElementById("demo").innerHTML = confirm('please check your return date properly it should be greater than departuredate.');
        }
    }
  </script>
    
